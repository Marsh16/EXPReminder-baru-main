<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBC0D"
    tools:context=".editprofile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/back_editprofile"
                android:layout_width="50dp"
                android:layout_height="49dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back_removebg_preview" />

            <TextView

                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Edit Profile"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="@+id/back_editprofile"
                app:layout_constraintStart_toEndOf="@+id/back_editprofile"
                app:layout_constraintTop_toTopOf="@+id/back_editprofile" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardimage_editprofile"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/profile_editprofile"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/download_removebg_preview"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_editprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:src="@drawable/oojs_ui_icon_camera_svg_removebg_preview"
                android:tint="@color/white"
                app:backgroundTint="@color/black"
                app:borderWidth="3dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardimage_editprofile"
                app:layout_constraintEnd_toEndOf="@+id/cardimage_editprofile"
                tools:ignore="SpeakableTextPresentCheck" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fullname_editprofile"

                style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="28dp"
                android:background="#FFFFFF"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"

                app:boxStrokeColor="#000000"
                app:hintTextColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/back_editprofile"
                app:layout_constraintTop_toBottomOf="@+id/cardimage_editprofile">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:hint="Fullname" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/username_editprofile"
                style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:layout_marginTop="16dp"
                android:background="#FFFFFF"
                app:boxStrokeColor="#000000"

                app:hintTextColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/fullname_editprofile"
                app:layout_constraintStart_toStartOf="@+id/fullname_editprofile"
                app:layout_constraintTop_toBottomOf="@+id/fullname_editprofile">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:hint="Username" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_editprofile"
                style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:layout_marginTop="16dp"
                android:background="#FFFFFF"
                app:boxStrokeColor="#000000"

                app:hintTextColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/username_editprofile"
                app:layout_constraintStart_toStartOf="@+id/username_editprofile"
                app:layout_constraintTop_toBottomOf="@+id/username_editprofile">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:hint="Email" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneno_editprofile"
                style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:layout_marginTop="16dp"
                android:background="#FFFFFF"
                app:boxStrokeColor="#000000"

                app:hintTextColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/email_editprofile"
                app:layout_constraintStart_toStartOf="@+id/email_editprofile"
                app:layout_constraintTop_toBottomOf="@+id/email_editprofile">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:hint="Phone No"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_editprofile"
                style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="353dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:background="#FFFFFF"
                app:boxStrokeColor="#000000"
                app:errorEnabled="true"
                app:hintTextColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/phoneno_editprofile"
                app:layout_constraintStart_toStartOf="@+id/phoneno_editprofile"
                app:layout_constraintTop_toBottomOf="@+id/phoneno_editprofile"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:hint="Password" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirmpassword_editprofile"
                style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:layout_marginTop="16dp"
                android:background="#FFFFFF"
                app:boxStrokeColor="#000000"

                app:hintTextColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/password_editprofile"
                app:layout_constraintStart_toStartOf="@+id/password_editprofile"
                app:layout_constraintTop_toBottomOf="@+id/password_editprofile"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:hint="Confirm Password" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/save_editprofile"
                android:layout_width="0dp"
                android:layout_height="65dp"

                android:layout_marginTop="28dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#DB0007"

                android:text="SAVE"
                android:textColor="#FFFFFF"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/confirmpassword_editprofile"
                app:layout_constraintStart_toStartOf="@+id/confirmpassword_editprofile"
                app:layout_constraintTop_toBottomOf="@+id/confirmpassword_editprofile" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>